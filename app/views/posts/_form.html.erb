<%= form_for(@post) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_area :title, :rows=>1, :cols=>68,:autofocus => true  %>
  </div>
  <div class="field">
    <%= f.label :post %><br>
    <%= f.text_area :post, :rows=>10, :cols=>68 %>
  </div>
  
  <div class="actions">
    <%= f.submit "Save Post", class: "button create_account" %>
  </div>
<% end %>

