<% provide(:title, 'Join Us') %>

<p>The best way save and share bookmarks</p>
<h1>Join Little Bookmarks</h1>
<br/>

<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="field">
    <%= f.text_field :name, :autofocus => true, :placeholder => 'choose a username' %>
  </div>
  
  <div class="field">
    <%= f.email_field :email, :placeholder => 'email' %>
  </div>
  
  <div class="field">
    <%= f.password_field :password, :placeholder => 'password' %>
  </div>

  <%= f.submit "Create my account", class: "button create_account" %>
<% end %>
</div>
<br/>
