<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <meta name="description" content="Social and Private Bookmarks, Access your bookmarks from anywhere. Fast and simple No ads, no bs." />
  <meta name="keywords" content="Bookmarks, Links, urls, tags, minimalistic design, anywhere." /> 
  <meta name="author" content="Edka" />
  <meta name="application-name" content="little bookmarks"/>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <!--[if lt IE 9]>
    <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">
    </script>
  <![endif]-->

  <!-- google analytics -->
  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-38541557-3', 'auto');
    ga('send', 'pageview');

  </script>
  <!-- google analytics -->

</head>
<body>
	<div class = "header">
		<div class ="width">
		  <div class ="left">
		    <span class="beta">Beta 1.1</span>
		    <br/>
		    <span class="logo-color">
		    	<%#= link_to (image_tag("bookmark.png")), root_path, :class => 'logo' %>
		        <%= link_to 'little bookmarks', root_path, :class => 'logo' %>
		    </span>
		  </div> <!-- close left class-->

		
		<div class ="left menu main_links">
			<br/>	
			<%= link_to "Blog", blog_path %>
			<%= link_to "About", about_path %>
			<%= link_to "Help", help_path %>
		</div>




		<% if logged_in? %>


		<div class ="right menu">
			<br/>
			<span>
				<% if current_user.avatar.blank? %>
					<%= link_to (image_tag("camera.png", size: "20x20", alt: "current_user.name", 
                    			                             class: "micro")), current_user %>
    			<% else %>
    				<%= link_to (image_tag(current_user.avatar.micro, size: "20x20", alt: "current_user.name", 
                    			                             class: "micro")), current_user %>
      				
    			<% end %>
				<%#= current_user.name %> 
				<%#= image_tag(current_user.avatar.micro, size: "20x20", alt: "current_user.name", 
				                                         class: "micro") %>
				<%#= current_user.name %> 
			<%#= link_to "Profile", current_user %>
			<%= link_to "Users", users_path %>
			
			<%= link_to "Settings", edit_user_path(current_user) %>
			<%#= link_to "Profile", current_user %>
			<%= link_to "Log out", logout_path, method: "delete"%>
			<span>
			</div>
			<% else %>
			<div class = "button">
			<%= link_to "Login", login_path, :class => 'button' %>
			  =^.^=
			</div>
			<% end %>
			<div class ="clear"></div>
		</div>
    </div> <!-- close header -->

	<div class="clear"></div>
		<div class = "width content">
		<br/>
		<% flash.each do |message_type, message| %>
		  <div class="alert alert-<%= message_type %>"><%= message %></div>
		<% end %>
	
		<%= yield %>
		
		<p class = "footer">Made with
			<%= image_tag("heart.png", size: "14x14", alt: "love") %> + 
			<%= image_tag("coffee.png", size: "14x14", alt: "love") %> 
		in Nashville</p>
	
		<%#= debug(params) if Rails.env.development? %>
	</div>

	<a title="Google Analytics Alternative" href="http://clicky.com/100814953"><img alt="Google Analytics Alternative" src="//static.getclicky.com/media/links/badge.gif" border="0" /></a>
<script src="//static.getclicky.com/js" type="text/javascript"></script>
<script type="text/javascript">try{ clicky.init(100814953); }catch(e){}</script>
<noscript></p></noscript>

</body>
</html>
